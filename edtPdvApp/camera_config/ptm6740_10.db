	field( DRVL, "0" )
	field( HOPR, "100" )
	field( LOPR, "0" )
	field( FLNK, "$(P)$(R)EdtGain" )
	field( PINI, "YES" )
}
record( ao, "$(P)$(R)EdtGain" )
