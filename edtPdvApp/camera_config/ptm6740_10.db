# Pulnix 6740 appears to take about 1.3ms to send the image
record( ao, "$(P)$(R)CamProcDelay" )
{
    field( DOL,  "1.3e-3" )
}

record( calc, "$(P)$(R)XmitDelay" )
{
    field( INPA, "$(P)$(R)ArraySizeX_RBV CP MS" )
    field( INPB, "$(P)$(R)XmitRate CPP MS" )
    field( INPC, "$(P)$(R)HTaps_RBV CPP MS" )
    field( INPD, "$(P)$(R)VTaps_RBV CPP MS" )
    field( INPE, "$(P)$(R)CamProcDelay CPP MS" )
    field( INPF, "$(P)$(R)ArraySizeY_RBV CP MS" )
    field( CALC, "((A+160)*(F+20)/B/C/D)+E" )
    field( EGU,  "Bytes/Sec" )
}

# Effective transmit rate is 40Mhz PixelClock * 2 HTaps
record( ao, "$(P)$(R)XmitRate" )
{
    field( DOL,  "40.0e6" )
    field( EGU,  "Bytes/Sec" )
    field( PREC, "3" )
    field( PINI, "YES" )
    info( autosaveFields, "VAL" )
}   


